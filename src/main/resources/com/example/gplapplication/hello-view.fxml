<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gplapplication.HelloController">


   <HBox style="-fx-padding: 2;" GridPane.rowIndex="1">

      <children>
         <Button onAction="#onRunButtonClick" style="-fx-start-margin: 1;" text="Run">
            <HBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </HBox.margin></Button>
         <Button onAction="#onSyntaxButtonClick" style="-fx-start-margin: 1;" text="Syntax">
            <HBox.margin>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </HBox.margin></Button>
      </children>
      <effect>
         <Lighting bumpInput="$null">
            <light>
               <Light.Distant />
            </light>
         </Lighting>
      </effect>
   </HBox>
   <HBox>


      <children>
         <VBox>
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            <children>
               <TextArea fx:id="inputMultipleCodeText" prefHeight="400.0" prefWidth="400.0">
               </TextArea>
               <TextField fx:id="inputSingleCodeText" prefHeight="30.0" prefWidth="400.0">
               </TextField>
            </children>

         </VBox>

         <VBox>
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
            <children>
<!--               <Label fx:id="welcomeText" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #e8e3e3;">-->
<!--                  <HBox.margin>-->
<!--                     <Insets left="5.0" />-->
<!--                  </HBox.margin>-->
<!--               </Label>-->
               <Canvas fx:id="canvasId" height="400.0" style="-fx-border-width: 1px; -fx-border-color: black;" width="400.0" />
            </children>

         </VBox>

      </children>
   </HBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
